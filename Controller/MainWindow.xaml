<Window x:Class="Controller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="650" Width="525" Loaded="Window_Loaded" Closed="Window_Closed">
    <StackPanel>
        <TextBox Name="currentState" Height="94" FontSize="36"></TextBox>
        <TextBox Name="prefix" FontSize="36"></TextBox>
        <ListBox Name="availableCommands" FontSize="24">
        </ListBox>
        <Label Background="Black" Name="recording_indicator" Height="100" Width="100" ></Label>
        <TextBox Name="action" FontSize="48"></TextBox>
        <TextBox Name="score" FontSize="48"></TextBox>
    </StackPanel>
</Window>
